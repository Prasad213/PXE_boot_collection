default menu.c32
prompt 0
timeout 300
ONTIMEOUT 1

menu title ########## CentOS 7 PXE Boot Menu ##########

label 1
menu label ^1) Install CentOS 7
menu default
kernel centos7/vmlinuz
append initrd=centos7/initrd.img method=http://{{ pxe_host }}/centos7 devfs=nomount

label 2
menu label ^2) Boot from local drive
localboot 0
